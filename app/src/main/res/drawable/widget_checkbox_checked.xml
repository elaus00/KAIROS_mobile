<?xml version="1.0" encoding="utf-8"?>
<!-- 위젯 체크박스 완료 (KAIROS 모노크롬 스타일) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 원형 배경 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#111111" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <!-- 체크마크 -->
    <item
        android:left="4dp"
        android:top="5dp"
        android:right="4dp"
        android:bottom="5dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="#FFFFFF" />
            </shape>
        </rotate>
    </item>
</layer-list>
