{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/check-sensitive-files.py"
          },
          {
            "type": "command",
            "command": "python3 .claude/hooks/enforce-codex.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/verify-kotlin-build.py",
            "timeout": 180,
            "statusMessage": "Kotlin 빌드 검증 중..."
          }
        ]
      }
    ]
  }
}
